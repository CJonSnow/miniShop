<view class="zy-cates">
  <search></search>
  <view class="cates-container">
    <!-- 左侧内容 -->
    <scroll-view scroll-y class="left-menu">
      <view class="menu-item {{index===currentIndex?'active':''}}" wx:for="{{leftMenuList}}" wx:key="*this" bindtap = "handleItemTap" data-index="{{index}}">
        {{item}}
      </view>
    </scroll-view>
    <!-- 右侧内容 -->
    <scroll-view scroll-y class="right-content">
      <view class="goods-group" wx:for="{{rightContent}}" wx:for-index="index1" wx:for-item="item1">
        <view class="goods-tiitle">
          {{item1.cat_name}}
        </view>
        <view class="goods-list">
          <navigator wx:for="{{item1.children}}" wx:for-index="index2" wx:for-item="item2" wx:key="cat_id">
            <image mode="widthFix" src="{{item2.cat_icon}}"></image>
            <view class="goods_name">{{item2.cat_name}}</view>
          </navigator>
        </view>
      </view>
    </scroll-view>
  </view>
</view>

